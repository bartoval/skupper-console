{
    "name": "skupper-web-console",
    "description": "Skupper Web Console",
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "start": "webpack serve --config config/webpack.dev.js",
        "build": "webpack --config config/webpack.prod.js",
        "test": "jest --config config/jest.config.js",
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "ci-test": "start-test 3000 cy:run",
        "lint": "eslint src --ext .ts,.tsx",
        "lint-fix": "npm run lint --fix",
        "prettier-all": "prettier --write '**/*.{js,ts,tsx,json,html,scss}'",
        "bundle-report": "STATS=server npm run build",
        "find-dead-code": "ts-prune",
        "prepare": "husky install"
    },
    "dependencies": {
        "@patternfly/patternfly": "^4.192.1",
        "@patternfly/react-charts": "^6.59.2",
