        "husky": "^7.0.4",
        "jest": "^28.0.3",
        "jest-environment-jsdom": "^28.0.2",
        "miragejs": "^0.1.43",
        "prettier": "^2.6.2",
        "sass": "^1.51.0",
        "sass-loader": "^12.6.0",
        "start-server-and-test": "^1.14.0",
        "style-loader": "^3.3.1",
        "ts-jest": "^28.0.1",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.7.0",
        "ts-prune": "^0.10.3",
        "tsconfig-paths-webpack-plugin": "^3.5.2",
