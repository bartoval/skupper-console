        "@patternfly/react-table": "^4.75.2",
        "@patternfly/react-topology": "^4.53.2",
        "axios": "^0.27.2",
        "d3": "^7.4.4",
        "d3-drag": "^3.0.0",
        "d3-fetch": "^3.0.1",
        "d3-force": "^3.0.0",
        "d3-scale": "^4.0.2",
        "d3-scale-chromatic": "^3.0.0",
        "d3-selection": "^3.0.0",
        "d3-zoom": "^3.0.0",
