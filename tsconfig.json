{
  "compilerOptions": {
    // Target the latest ECMAScript version for compatibility with modern JavaScript features
    "target": "ESNext",

    // Include DOM and ESNext libraries for full support of web APIs and modern ECMAScript features
    "lib": ["dom", "ESNext"],

    // Use ESNext module system, enabling dynamic imports and module resolution
    "module": "ESNext",

    // Use Node-style module resolution for better compatibility with the filesystem
    "moduleResolution": "node",

    // Use the React JSX transform introduced in React 17
    "jsx": "react-jsx",

    // Specify where to look for type declarations for packages
    "typeRoots": ["node_modules/@types"],

    // Base URL for module imports (makes it easier to import from 'src' rather than relative paths)
    "baseUrl": "src",

    // Enable source map generation to facilitate debugging
    "sourceMap": true,

    // Allow JavaScript files to be imported alongside TypeScript files
    "allowJs": true,

    // Enable compatibility with CommonJS-style imports and exports
    "esModuleInterop": true,

    // Allow default imports for non-ESModule files (like CommonJS)
    "allowSyntheticDefaultImports": true,

    // Enable strict type checking options for better type safety
    "strict": true,

    // Force consistent casing in file names
    "forceConsistentCasingInFileNames": true,

    // Allow importing JSON modules directly
    "resolveJsonModule": true,

    // Do not generate any output files (useful for type-checking only)
    "noEmit": true,

    // Skip type checking of declaration files to improve build time
    "skipLibCheck": true,

    // Enable support for iteration over iterable types like arrays and maps
    "downlevelIteration": true,

    // Enable strict null checks to ensure null and undefined are properly handled
    "strictNullChecks": true,

    // Enforce explicit returns in functions to avoid accidental undefined returns
    "noImplicitReturns": true,

    // Ensure strict function type checking
    "strictFunctionTypes": true,

    // Disallow unused function parameters to avoid unnecessary code
    "noUnusedParameters": true,

    // Disallow unused local variables to keep the codebase clean
    "noUnusedLocals": true,

    // Ensure that all properties are initialized in the constructor
    "strictPropertyInitialization": true
  },

  // Include the following directories for type-checking and compiling
  "include": ["src", "__tests__", "jest.config.ts", "mocks"],

  // Exclude unnecessary directories like build and node_modules from type-checking
  // Cypress config is excluded due to a known issue: https://github.com/cypress-io/cypress/issues/22059
  "exclude": ["node_modules", "build", "cypress.config.ts"]
}
